<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_yellow"
    android:padding="@dimen/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvmcleanapp.presentation.activity.MoviesActivity">

    <TextView
        android:id="@+id/error_dialog_fragment_message"
        style="@style/DescriptionStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/error_dialog_fragment_button_ok"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/error_dialog_fragment_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_dialog_fragment_button_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>